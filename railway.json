{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python backend_runner.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "on_failure",
    "port": 8080
  },
  "env": {
    "PYTHON_ENV": "production",
    "RAILWAY_LOG_LEVEL": "debug",
    "PORT": "8080",
    "HOSTNAME": "0.0.0.0"
  }
}
